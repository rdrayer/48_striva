{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://our.company.com/companyUpdate.schema.json",
    "type": "object",
    "properties": {
      "activityType": {
        "type": "string"
      },
      "distance": {
        "type": "string",
        "minimum": 0
      },
      "activityDateTime": {
        "type": "string",
        "format": "date-time"
      },
      "activityDuration": {
        "type": "string",
        "minimum": 0
      },
      "title": {
        "type": "string",
        "maxLength": 25
      },
      "description": {
        "type": "string"
      },
      "username": {
        "type": "string"
      }
    },
    "additionalProperties": false,
    "required": [
        "activityType",
        "activityDateTime",
        "activityDuration",
        "title",
        "username"
    ]
  }
  